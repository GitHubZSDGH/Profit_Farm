<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.profitfarm.hlks.profit_farm.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="true">
        <FrameLayout
        android:id="@+id/main_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <RadioGroup
        android:id="@+id/home_page"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        >

        <RadioButton
            android:id="@+id/home_button1"
            style="@style/radio"
            android:drawableTop="@drawable/selector_muchang"
            android:textColor="@drawable/bottom_text_color"
            android:layout_marginTop="3dp"
            android:text="牧场"
             />
        <RadioButton
            android:id="@+id/home_button2"
            style="@style/radio"
            android:layout_marginTop="3dp"
            android:drawableTop="@drawable/selector_jieshao"
            android:textColor="@drawable/bottom_text_color"
            android:text="介绍"
         />
        <RadioButton
            android:id="@+id/home_button3"
            style="@style/radio"
            android:layout_marginTop="2dp"
            android:drawableTop="@drawable/selector_shichang"
            android:textColor="@drawable/bottom_text_color"
            android:text="市场"
        />
        <RadioButton
            android:id="@+id/home_button4"
            style="@style/radio"
            android:layout_marginTop="2dp"
            android:drawableTop="@drawable/selector_wode"
            android:textColor="@drawable/bottom_text_color"
            android:text="我的"
         />

    </RadioGroup>
    </LinearLayout>
</LinearLayout>
